# Water temperature

function() {
  tabPanel("tabpan_temp"
           , sidebarLayout(
             sidebarPanel(
               width = 4
               ,h2("Water Temperature Evaluation")
               ,p(strong("Chosen AU:"), textOutput("output_AU_choice2", inline = T)
                   , style = "font-size:20px;")
               # Temperature criteria
               ,p(strong("Determine which temperature criteria were violated."))
               ,selectInput(inputId = "input_tempcrit_choice"
                            ,label = "Which temperature criteria were violated, the warm water or cold water?"
                            ,choices = c("","Warm-Water","Cold- Water","Unclear")) # selectInput
               , textOutput("output_tempcrit")
               # Impervious land cover
               ,selectInput(inputId = "input_imperv_choice"
                            ,label = "Is impervious land cover a potential source of impairment?"
                            ,choices = c("","Yes","No","Unclear")) # selectInput
             ) # sidebarPanel
             , mainPanel(
               
             ) # mainPanel
           ) # sidebarLayout
  )##tabPanel ~ END
}##FUNCTION ~ END